%h3= link_to "profile index", profiles_path
%h1 Show profile page

%p
  User:
  = @profile.user.email
%p
  Display name:
  = @profile.display_name
%p
  Avatar
  = image_tag @profile.avatar.url(:medium)
  = image_tag @profile.avatar.url(:thumb)
%p
  Location:
  = @profile.location
%p
  Tagline:
  = @profile.tagline
%p
  Description:
  = @profile.description

